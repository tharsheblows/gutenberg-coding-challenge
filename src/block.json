{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "xwp/country-card",
	"version": "1.0.0",
	"title": "Country Card",
	"category": "widgets",
	"icon": "admin-site",
	"description": "Block rendering a card with country information.",
	"supports": {
		"align": true
	},
	"attributes": {
		"countryCode": {
			"type": "string",
			"source": "html",
			"selector": ".xwp-country-card__country-code"
		},
		"relatedPosts": {
			"type": "array",
			"source": "query",
			"selector": ".xwp-country-card__related-post",
			"query": {
				"title": {
					"type": "string",
					"selector": ".xwp-country-card__related-post__heading",
					"source": "html"
				},
				"excerpt": {
					"type": "string",
					"selector": ".xwp-country-card__related-post__excerpt",
					"source": "html"
				},
				"link": {
					"type": "string",
					"selector": ".xwp-country-card__related-post__link",
					"source": "attribute",
					"attribute": "href"
				},
				"id": {
					"type": "string",
					"selector": ".xwp-country-card__related-post__link",
					"source": "attribute",
					"attribute": "data-post-id"
				}
			}
		}
	},
	"textdomain": "xwp-country-card",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}
